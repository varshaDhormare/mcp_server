{
  "compilerOptions": {
    "target": "ES2020",                      // or ES2017+
    "module": "ESNext",                      // allows top-level await
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  }
}