{
  "compilerOptions": {
    "target": "es2022",                     /* Enable top-level await and modern JS features */
    "module": "es2022",                     /* Use native ES modules */
    "moduleResolution": "node",            /* Resolve modules like Node.js */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["index.ts"]
}
